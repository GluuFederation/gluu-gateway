[Unit]
Description=Gluu-Gateway server daemon
After=network.target konga.service
Requires=konga.service 

[Service]
Type=forking
ExecStart=/bin/bash -c 'systemctl start konga'
ExecStop=/bin/bash -c 'systemctl stop konga && systemctl stop kong && systemctl stop oxd-server'
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
