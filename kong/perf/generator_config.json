          "scope_expression": {
            "rule": {
              "and": [
                {
                  "var": 0
                },
                {
                  "var": 1
                }
              ]
            },
            "data": [
              "admin",
              "employee"
            ]
          },
          "httpMethods": [
              "GET",
              "DELETE",
              "POST"
          ]
        }
      ]
    },
    {
